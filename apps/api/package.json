{
  "name": "pharma-care-backend",
  "version": "1.0.0",
  "description": "Backend API for Pharmaceutical Care SaaS application",
  "main": "dist/server.js",
  "scripts": {
    "build": "npm install && npx tsc && echo 'Build completed successfully! Check dist/ directory.'",
    "start": "node --max-old-space-size=8192 ./dist/server.js",
    "dev": "NODE_OPTIONS='--max-old-space-size=8192' nodemon --exec ts-node src/server.ts",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:e2e:patient-engagement": "jest --testPathPattern=patientEngagementE2E --config jest.e2e.config.js",
    "test:mtr": "ts-node src/__tests__/runTests.ts",
    "seed": "ts-node scripts/seedSubscriptionPlans.ts",
    "seed:plans": "ts-node scripts/seedPlansFromConfig.ts",
    "seed:pricing": "ts-node src/scripts/seedPricingData.ts",
    "seed:help": "ts-node src/scripts/seedHelpData.ts",
    "seed:security-logs": "ts-node src/scripts/seedSecurityAuditLogs.ts",
    "drop-indexes": "ts-node scripts/dropOldIndexes.ts",
    "clean-db": "ts-node scripts/cleanDatabase.ts",
    "clear-diagnostics": "ts-node scripts/clearPendingDiagnosticRequests.ts",
    "migrate:workspace": "ts-node scripts/migrateToWorkspaceSubscriptions.ts",
    "setup:workspace-subscriptions": "ts-node scripts/setupWorkspaceSubscriptionSystem.ts",
    "setup:feature-flags": "ts-node scripts/setupFeatureFlags.ts",
