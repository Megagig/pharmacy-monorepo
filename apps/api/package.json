    "seed:roles": "ts-node scripts/seedRoles.ts",
    "seed:workspace-roles": "ts-node scripts/assignWorkspaceOwnerRoles.ts",
    "seed:rbac": "npm run seed:permissions && npm run seed:roles && npm run seed:workspace-roles"
  },
  "keywords": [
    "pharmacy",
    "healthcare",
    "saas",
    "clinical",
    "medications"
