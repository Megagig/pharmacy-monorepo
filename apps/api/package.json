    "feature-flags:status": "ts-node scripts/featureFlags.ts status",
    "feature-flags:set": "ts-node scripts/featureFlags.ts set",
    "feature-flags:test": "ts-node scripts/featureFlags.ts test",
    "feature-flags:verify-rollout": "ts-node scripts/featureFlags.ts verify-rollout",
