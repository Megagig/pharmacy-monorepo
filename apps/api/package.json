    "debug-subscription": "ts-node scripts/debugSubscription.ts",
    "list-users": "ts-node scripts/listUsers.ts",
    "test-subscription-api": "ts-node scripts/testSubscriptionAPI.ts",
    "change-password": "ts-node scripts/changeUserPassword.ts",
    "test:queue-infrastructure": "ts-node src/scripts/testQueueInfrastructure.ts",
    "load-test": "artillery run tests/load/load-test-config.yml",
    "load-test:appointments": "artillery run tests/load/appointments-load-test.yml",
    "load-test:followups": "artillery run tests/load/followups-load-test.yml",
    "patient-engagement:setup": "ts-node src/scripts/setupPatientEngagementRollout.ts",
    "patient-engagement:rollout": "ts-node src/scripts/managePatientEngagementRollout.ts",
    "patient-engagement:monitor": "ts-node src/scripts/monitorPatientEngagementRollout.ts",
    "patient-engagement:test": "ts-node src/scripts/testPatientEngagementRollout.ts",
    "enable-appointments": "ts-node src/scripts/enableAppointmentFeatures.ts",
    "create-default-schedules": "ts-node src/scripts/createDefaultPharmacistSchedules.ts",
    "rollout": "npm run patient-engagement:rollout",
    "monitor-rollout": "npm run patient-engagement:monitor",
    "test-rollout": "npm run patient-engagement:test",
    "post-launch:monitor": "ts-node src/scripts/postLaunchMonitoring.ts",
    "bug-fix:manage": "ts-node src/scripts/bugFixReleaseManager.ts",
    "load-test:websockets": "artillery run tests/load/websockets-load-test.yml",
    "load-test:database": "artillery run tests/load/database-load-test.yml",
    "load-test:full": "npm run load-test:appointments && npm run load-test:followups && npm run load-test:websockets",
    "load-test:report": "ts-node tests/load/scripts/generateLoadTestReport.ts",
    "load-test:setup": "ts-node tests/load/scripts/setupLoadTestData.ts",
    "load-test:cleanup": "ts-node tests/load/scripts/cleanupLoadTestData.ts",
    "test:slot-generation": "ts-node src/scripts/testSlotGeneration.ts",
