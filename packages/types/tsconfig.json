{
    "extends": "../config/typescript/base.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "module": "esnext",
        "declaration": true,
        "declarationMap": true,
        "composite": true,
        "noUnusedLocals": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}